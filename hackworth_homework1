#include <iostream>
using namespace std;
int main()
{
	//Variables
	int n1 = 4;
	int n2 = 2;
	int n3;
	int sum;
	//Users number of choice 
	cout << "Enter number here";
	cin >> n3;
	//SUms of total equation
	sum = n1 + n2 + n3;
	cout << n1 << "+" << n2 << "+" << n3 << "=" << sum;
	return 0;
}
